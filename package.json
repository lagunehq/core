{
  "name": "masto",
  "description": "Mastodon API client for JavaScript, TypeScript, Node.js, browsers",
  "private": false,
  "version": "2.0.1",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:jest": "jest --coverage --config=jest.config.js",
    "test:tslint": "tslint -c tslint.yml 'src/**/*.{ts,tsx}'",
    "test:prettier": "prettier -c 'src/**/*.{ts,tsx}'",
    "build": "rollup -c rollup.config.js",
    "prepublishOnly": "yarn run test && yarn run build",
    "docs:build": "typedoc ./src && touch ./docs/.nojekyll"
  },
  "dependencies": {
    "@types/ws": "^6.0.1",
    "axios": "^0.18.0",
    "bufferutil": "^4.0.1",
    "eventemitter3": "^3.1.2",
    "form-data": "^2.3.3",
    "isomorphic-form-data": "^2.0.0",
    "isomorphic-ws": "^4.0.1",
    "normalize-url": "^4.3.0",
    "semver": "^6.0.0",
    "simplytyped": "^3.1.0",
    "ts-optchain": "^0.1.6",
    "utf-8-validate": "^5.0.2",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/http-link-header": "^1.0.0",
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@types/normalize-url": "^4.2.0",
    "@types/semver": "^6.0.0",
    "codecov": "^3.3.0",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "rollup": "^1.11.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.21.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.2.0",
    "typescript": "^3.4.5",
    "typescript-tslint-plugin": "^0.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neet/masto.js.git"
  },
  "keywords": [
    "mastodon"
  ],
  "bugs": {
    "url": "https://github.com/neet/masto.js/issues"
  },
  "homepage": "https://github.com/neet/masto.js#readme",
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  }
}
