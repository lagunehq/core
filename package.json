{
  "name": "masto",
  "description": "Mastodon API client for JavaScript, TypeScript, Node.js, browsers",
  "private": false,
  "version": "4.4.0",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "AGPL-3.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:jest": "jest --coverage --config=jest.config.js",
    "test:eslint": "eslint -c .eslintrc.json ./src/**/*.ts",
    "test:spellcheck": "cspell '{src,examples}/**/*.{ts,tsx,js,json,md}'",
    "build": "rollup -c rollup.config.js",
    "prepublishOnly": "yarn run test && yarn run build",
    "release": "standard-version",
    "docs:build": "typedoc ./src/entrypoints/nodejs.ts && touch ./docs/.nojekyll"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "change-case": "^4.1.2",
    "eventemitter3": "^4.0.7",
    "isomorphic-form-data": "^2.0.0",
    "isomorphic-ws": "^4.0.1",
    "semver": "^7.3.7",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/semver": "^7.3.10",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.36.1",
    "codecov": "^3.8.3",
    "cspell": "^6.1.2",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rollup": "^2.75.6",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "rxjs": "^7.5.5",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.5",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.4"
  },
  "files": [
    "README.md",
    "dist",
    "fetch",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neet/masto.js.git"
  },
  "keywords": [
    "mastodon"
  ],
  "bugs": {
    "url": "https://github.com/neet/masto.js/issues"
  },
  "homepage": "https://github.com/neet/masto.js#readme"
}
